<Page x:Class="PointOfSale.ComboSelection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PointOfSale"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ComboSelection">
    <WrapPanel>
        <WrapPanel.Resources>
            <Style TargetType="Button">
                <Setter Property="MinWidth" Value="140"/>
                <Setter Property="MinHeight" Value="140"/>
            </Style>
        </WrapPanel.Resources>
        <Button Width="140" Height="140">
            <StackPanel>
                <Image Width="100" Source="Assets/Brontowurst.png"/>
                <TextBlock>Brontowurst Combo</TextBlock>
            </StackPanel>
        </Button>
        <Button VerticalContentAlignment="Top">
            <Button.Background>
                <ImageBrush ImageSource="Assets/Brontowurst.png"/>
            </Button.Background>
            Dino-Nuggets Combo
        </Button>
        <Button>Steakosaurus Comobo</Button>
        <Button>TRexKingBurger Combo</Button>
        <Button>Prehistoric PB&amp;J Combo</Button>
        <Button>Pterdactyl Wings Combo</Button>
        <Button>Veloci-Wrap Combo</Button>
    </WrapPanel>
</Page>
